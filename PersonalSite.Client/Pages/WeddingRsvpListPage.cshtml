@using PersonalSite.Shared
@using Microsoft.JSInterop;
@page "/RSVP/List"
@inject HttpClient Http

<link href="https://fonts.googleapis.com/css?family=Muli|Titillium+Web" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Crimson+Text" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Caveat+Brush|Great+Vibes|Lobster" rel="stylesheet">
<style>

    .rsvp-party {
        border: 1px solid black;
    }

    .names, .status {
        margin: .25em 0;
    }

    .center{
        display: flex;
        justify-content:center;
        align-items:center;
        text-align: center;
    }

    .column{
        flex-direction: column;
    }

    .list-container>div>div>div{
        margin: 1.5em 1em;
        text-align: center;
    }

    .date{
        width: 10%
    }

    .name{
        width: 20%;
    }

    .status{
        width: 10%;
    }

    .dietary{
        width: 30%;
    }

    .comment {
        width: 30%;
    }



</style>
@if (rsvps == null)
{
    <p><em>Loading...</em></p>
    <LoadingSpinner/>
}
else
{
    <h1>RSVPs for Nick and Mandy's Wedding Reception</h1>

    <div class="container-fluid list-container container">
        <div class="center row">
            <div class="date col">RSVP Date</div>
            <div class="name col">Name</div>
            <div class="status col">Accept/Decline</div>
            <div class="dietary col">Dietary Requirements</div>
            <div class="comment col">Comment</div>
        </div>
        @foreach (var rsvp in rsvps)
        {
        <div class="center rsvp-party row">
            <div class="date col">@rsvp.RsvpDate.ToShortDateString()</div>
            <div class="name col">
                @foreach (var person in rsvp.Attendees)
                {
                    <div class="center column">@person.Name</div>
                }
            </div>
            <div class="status col">
                @foreach (var person in rsvp.Attendees)
                {
                    <div class="center colum">@person.Status</div>
                }
            </div>

            <div class="dietary col">
                @foreach (var person in rsvp.Attendees)
                {
                    <div class="center colum">@person.DietaryRestrictions</div>
                }
            </div>
            <div class="comment col">@rsvp.Comments</div>
        </div>

        }
    </div>
}

@functions {

    List<WeddingRSVP> rsvps;

    protected override async Task OnInitAsync()
    {
        rsvps = await Http.GetJsonAsync<List<WeddingRSVP>>("/api/RSVP/List");
    }
}


